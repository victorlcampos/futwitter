<!DOCTYPE html>
<html>
  <head>
    <title>Futwitter | Plataforma social do futebol</title>
    <%= stylesheet_link_tag    'application', :media => "all" %>
    <%= csrf_meta_tags %>
    <%= javascript_include_tag 'https://www.google.com/jsapi' %>
  </head>
  <body>

    <div id="header">
      <%= link_to image_tag("logo.png"), root_path %>
      <h1 class="title">Futwitter | Portal social do futebol</h1>
    </div>

    <div id="teams_nav">
      <div id="championships">
        <%= select_tag :championship, options_from_collection_for_select(@championships, 'id', 'name') %>
      </div>
      <div id="teams">
        <% @teams.each do |team| %>
          <%= link_to image_tag(team.badge_url), team_path(team), class: team_classes(team), title: team.name %>
        <% end %>
      </div>
    </div>
    <div class='help'><span><a id='help' href="#myModal" role="button" data-toggle="modal" >Sobre</a></span></div>
    <div id="myModal" class="modal hide fade">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Sobre</h3>
      </div>
      <div class="modal-body">
        <p><%= @help %></p>
      </div>
    </div>
    <div id='wrapperComAMensagem' style='display:none;'>
      Conte√∫do
    </div>
    <br class='clear' />
    <div id="content" class='<%= controller_name %>'>
      <%= yield %>
    </div>
  </body>
  <%= javascript_include_tag 'application' %>
  <%= yield :javascripts %>
</html>
